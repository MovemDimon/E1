{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "material/**", "use": "@vercel/static" },
    { "src": "backend/api/**/*.js", "use": "@vercel/node" },        // اضافه شد برای APIهای پوشه backend/api
    { "src": "backend/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/home", "destination": "/home.html" },
    { "source": "/data/(.*)", "destination": "/backend/index.js" },
    { "source": "/api/(.*)", "destination": "/backend/api/$1.js" }   // مسیر API رو ریرایت می‌کنه
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
